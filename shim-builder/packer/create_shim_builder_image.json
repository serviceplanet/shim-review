{
  "builders": [
    {
      "type": "qemu",
      "iso_url": "http://ftp.tudelft.nl/centos.org/7/isos/x86_64/CentOS-7-x86_64-Everything-1611.iso",
      "iso_checksum": "af4969ebbdc479d330de97c5bfbb37eedc64c369f009cb15a97f9553ba441c88",
      "iso_checksum_type": "sha256",
      "output_directory": "packer_output",
      "shutdown_command": "shutdown -P now",
      "disk_size": 5000,
      "format": "qcow2",
      "headless": false,
      "accelerator": "kvm",
      "http_directory": "http",
      "http_port_min": 10000,
      "http_port_max": 10500,
      "ssh_host_port_min": 2000,
      "ssh_host_port_max": 2500,
      "ssh_username": "root",
      "ssh_password": "root",
      "ssh_port": 22,
      "ssh_wait_timeout": "14400s",
      "vm_name": "shim_builder_image-packer",
      "net_device": "virtio-net",
      "disk_interface": "virtio",
      "boot_wait": "5s",
      "boot_command": [
        "<esc>",
        " linux ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/centosks.cfg",
        "<enter>",
        "<wait>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../shim/source",
      "destination": "/root/"
    },
    {
      "type": "file",
      "source": "../keys",
      "destination": "/root/"
    }
  ]
}
